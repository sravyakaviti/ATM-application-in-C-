#include<bits/stdc++.h>
#include <cstdlib>
using namespace std;

void showmenu(){
    cout<<"****************MENU****************"<<endl;
    cout<<"1. Check balance" <<endl;
    cout<<"2. Deposit" <<endl;
    cout<<"3. Withdraw" <<endl;
    cout<<"4. Exit" <<endl;
    cout<<"************************************"<<endl;
}

int main(){
    
    int option;
    double balance = 500;
    
    do{
    showmenu();
    cout<<"Option: ";
    cin>>option;
    system("cls");
    
    switch(option){
        case 1:
            cout<<"Balance is: "<<balance<<" $"<<endl;
            break;
        case 2:
            cout<<"Deposit amount:";
            double depositeamount;
            cin>>depositeamount;
            balance+=depositeamount;
            break;
        case 3:
            cout<<"Withdraw amount";
            double withdrawamount;
            cin>>withdrawamount;
            if(withdrawamount<=balance)
                balance-=withdrawamount;
            else
               cout<<"Not enough money"<<endl;
            break;
    }
    } while(option!=4);
    system("pause>0");
}
